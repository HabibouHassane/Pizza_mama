@page
@model pizza_mama.Pages.MenuPizzaModel
@{
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <title>Menu des pizzas</title>
     </head>
    <body>
    <a asp-page="Index"><img id="small_logo" src="/images/small_logo.png" /></a>
    

    <div class="menu_title">
        <h1>Les Pizzas</h1>
    </div>
     

    <div class="menu_list">
        @foreach (var pizza in Model.Pizza)
        {
            <div class="menu_list_item">
                <span class="menu_item_title"> @pizza.nom</span>
                <span class="menu_item_price"> @String.Format("{0:0.00}" ,pizza.prix)€</span>
                <span class="menu_item_ingredient"> @pizza.ingredients</span>
                @if (pizza.vegetarienne)
                {
                    <span class="menu_item_vegetarienne"> VEGETARIENNE</span>
                }
            </div>
            
        }
    </div>

    
    

        
    </body>
</html>


